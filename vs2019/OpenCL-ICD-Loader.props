<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ImportGroup Label="PropertySheets" />
	<PropertyGroup Label="UserMacros">
		<OPENCL_ICD_LOADER_DIR>D:\sdk\vs2019\OpenCL-ICD-Loader-2020.06.16\</OPENCL_ICD_LOADER_DIR>
		<LocalDebuggerEnvironment Condition="'$(Platform)' == 'Win32'">PATH=$(OPENCL_ICD_LOADER_DIR)\build\win32\$(Configuration)\;$(LocalDebuggerEnvironment.Replace('PATH=', '').Replace('%PATH%', '').Replace(';;', ';'));%PATH%</LocalDebuggerEnvironment>
		<LocalDebuggerEnvironment Condition="'$(Platform)' == 'x64'  ">PATH=$(OPENCL_ICD_LOADER_DIR)\build\x64\$(Configuration)\;$(LocalDebuggerEnvironment.Replace('PATH=', '').Replace('%PATH%', '').Replace(';;', ';'));%PATH%</LocalDebuggerEnvironment>
	</PropertyGroup>
	<PropertyGroup>
		<IncludePath>$(OPENCL_ICD_LOADER_DIR)\inc\;$(IncludePath)</IncludePath>
		<!--IncludePath>$(OPENCL_ICD_LOADER_DIR)\loader\;$(IncludePath)</IncludePath>
		<IncludePath>$(OPENCL_ICD_LOADER_DIR)\loader\windows\;$(IncludePath)</IncludePath-->
		<LibraryPath Condition="'$(Platform)' == 'Win32'">$(OPENCL_ICD_LOADER_DIR)\build\win32\;$(LibraryPath)</LibraryPath>
		<LibraryPath Condition="'$(Platform)' == 'x64'  ">$(OPENCL_ICD_LOADER_DIR)\build\x64\;$(LibraryPath)</LibraryPath>
	</PropertyGroup>
	<ItemDefinitionGroup>
		<Link>
			<AdditionalDependencies>
				$(Configuration)\OpenCL.lib;
				%(AdditionalDependencies)
			</AdditionalDependencies>
			<!--AdditionalDependencies Condition="'$(Configuration)'=='Debug'">
				Debug\OpenCL.lib;
				%(AdditionalDependencies)
			</AdditionalDependencies>
			<AdditionalDependencies Condition="'$(Configuration)'=='Release'">
				Release\OpenCL.lib;
				%(AdditionalDependencies)
			</AdditionalDependencies-->
		</Link>
		<ClCompile>
			<PreprocessorDefinitions>__OPENCL_ICD_LOADER__2020__;%(PreprocessorDefinitions)</PreprocessorDefinitions>
		</ClCompile>
	</ItemDefinitionGroup>
</Project>
